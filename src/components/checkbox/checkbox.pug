mixin checkbox({ name, label, title, description, checked=false, disabled=false })
    label(class = 'checkbox')     
        input(
            class = 'checkbox__input'
            type = 'checkbox' 
            name = name
            title = title
            checked = checked 
            disabled = disabled
        )
        div(class = 'checkbox__mark')

        if label
            p(class = description ? 'checkbox__label checkbox__label_font-weight_bold' : 'checkbox__label') #{label}

        if description
            p(class = 'checkbox__description') #{description}