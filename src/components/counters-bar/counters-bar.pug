include ../counter/counter

mixin counters-bar({ mode='autoApply' })
    div.counters-bar.js-counters-bar(data-mode=mode)
        if block
            block
        div.counters-bar__footer.js-counters-bar__footer(hidden)
            button.counters-bar__clear-button.js-counters-bar__clear-button(type='button') очистить
            button.counters-bar__apply-button.js-counters-bar__apply-button(type='button') применить