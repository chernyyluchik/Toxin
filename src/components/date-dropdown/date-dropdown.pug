include ../dropdown/dropdown

mixin date-dropdown({ label, labelFrom, labelTo, show, disabled, theme='twin'})
    if (theme === 'twin')
        div.date-dropdown.date-dropdown_theme_twin.js-date-dropdown
            +dropdown({ 
                label: labelFrom, 
                value: 'дд.мм.гггг', 
                mask: 'date', 
                theme: 'offset',
                show, 
                disabled
            })
            +dropdown({ 
                label: labelTo, 
                value: 'дд.мм.гггг', 
                mask: 'date', 
                theme: 'offset',
                show, 
                disabled
            })           
    if (theme === 'single')
        div.date-dropdown.date-dropdown_theme_single.js-date-dropdown
            +dropdown({ 
                value: 'дд.мм-дд-мм',
                mask: 'date', 
                theme: 'offset', 
                label, 
                show, 
                disabled
            })