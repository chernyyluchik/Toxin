mixin expander({ label, expand=false, disabled=false })

    -const classes = theme ? `expander js-expander expander_theme_${theme}` : 'expander js-expander';

    div(class = expand ? `${classes} expander_is_expanded` : classes)
        button.expander__button.js-expander__button(
            type="button" 
            disabled=disabled
            )
            h3.expander__label #{label}
            div.expander__icon
                |expand_more
        div.expander__viewport
            div.expander__container.js-expander__container
                if block
                    block