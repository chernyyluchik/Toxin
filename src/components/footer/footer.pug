include ./social-list/social-list
include ../logo/logo
include ../list/list
include ../subscribtion-field/subscribtion-field

mixin footer({ heading, logoLink, awardSection, navSection, aboutSection, supportSection, subscribtionSection, copyright, socialSection })
    footer(class = 'footer')
        div(class = 'footer__content')
            a(
                class = 'footer__logo-link' 
                href = logoLink.href
                title = logoLink.title
                aria-label = logoLink.ariaLabel
            )
                +logo()

            section(class = 'footer__section footer__section_awards')
                h3(class = 'footer__label footer__label_visually-hidden') #{awardSection.label}  
                p(class = 'footer__section-text') #{awardSection.text}

            section(class = 'footer__section footer__section_nav')
                h3(class = 'footer__label') #{navSection.label}
                +list(navSection.list)

            section(class = 'footer__section footer__section_about')
                h3(class = 'footer__label') #{aboutSection.label}
                +list(aboutSection.list)

            section(class = 'footer__section footer__section_support')
                h3(class = 'footer__label') #{supportSection.label}
                +list(supportSection.list)

            section(class = 'footer__section footer__section_subscribtion')
                h3(class = 'footer__label') #{subscribtionSection.label}
                p(class = 'footer__section-text') #{subscribtionSection.text}
                +subscribtion-field(subscribtionSection.subscribtionField)

        div(class = 'footer__separator')
            
        div(class = 'footer__basement') 
            p(class = 'footer__copyright') #{copyright.text}
            
            section(class = 'footer__social')
                h3(class = 'footer__label footer__label_visually-hidden') #{socialSection.label}
                +social-list(socialSection.socialList)

                    




