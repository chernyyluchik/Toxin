mixin tooltip(description, lang)
    -
        const uniqid = require('uniqid');
        const id = uniqid();

        const i18n = require('../../components/form-booking/tooltip/i18n.json')[lang]; 

        const { ADDITIONAL_INFO } = i18n;


    span(
        class = 'tooltip'
        role = 'tooltip'
        aria-label = ADDITIONAL_INFO
        aria-describedby = `tooltip-description-${id}`
        tabindex = '0'
    ) i
        span(
            class = 'tooltip__description'
            id = `tooltip-description-${id}`
        ) #{description}