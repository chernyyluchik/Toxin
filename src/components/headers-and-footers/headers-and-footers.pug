include ../header/header
include ../footer/footer

mixin headers-and-footers({ headersAndFooters, user })
    div(class = 'headers-and-footers')
        +header({
            header: headersAndFooters.header
        })
    
        -headersAndFooters.header.auth = true

        +header({
            header: headersAndFooters.header,
            user
        })
        +footer(headersAndFooters.footer)