include ../checkbox/checkbox

mixin list({ label, checkbox, bullet, text })

    -let classes = checkbox ? `list js-list list_with_checkbox` :  bullet ? `list js-list list_with_bullet` : 'list js-list';

    ul(class = classes)
        if label
            lh(class = 'list__heading js-list__heading') #{label}
        if checkbox
            each data in checkbox
                li(class = 'list__item')
                    +checkbox(data)
        if text
            each data in text
                li(class = 'list__item')
                    | #{data}
        