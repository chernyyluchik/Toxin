include ../text-field/text-field

mixin subscribtion-field({ textField })
    form(class = 'subscribtion-field')
        +text-field({ 
            label: textField.label, 
            input: {
                type: 'email', 
                placeholder: 'Email',
                required: 'true',
                title: textField.title
            },
            button: {
                ariaLabel: textField.button.ariaLabel,
                title: textField.button.title
            },
            icon: {
                text: 'arrow_forward',
                activeClass: 'subscribtion-field__icon'
            }
        })