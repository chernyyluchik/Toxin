mixin toggle(toggle)
    -
        const {
            name,
            label,
            checked=false,
            disabled=false
        } = toggle;
        
    label(class = 'toggle')
        input(
            class = 'toggle__input'
            name = name
            type = 'checkbox'
            checked = checked ? true : false
            disabled = disabled ? true : false
        )
        
        if label
            span(class = 'toggle__label') #{label}