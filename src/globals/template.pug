doctype html

block variables
    -let lang = 'ru';
    -let description = 'Сервис бронирования отелей и гостиниц Toxin.';
    -let title = 'Сервис бронирования отелей и гостиниц Toxin.';

html(lang = lang)
    head
        meta(charset = 'UTF-8')
        meta(
            name = 'viewport' 
            content = 'width=device-width, initial-scale=1.0'
        )
        meta(
            name = 'description' 
            content = description
        )
        meta(
            name = 'theme-color' 
            content = '#ffffff'
        )

        title #{title}
 
    block content