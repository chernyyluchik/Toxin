doctype html

block variables
    -
        let lang;
        let description;
        let title;

html(lang = lang)
    head
        meta(charset = 'UTF-8')
        meta(
            name = 'viewport' 
            content = 'width=device-width, initial-scale=1.0'
        )
        meta(
            name = 'description' 
            content = description
        )
        meta(
            name = 'theme-color' 
            content = '#ffffff'
        )

        title #{title}

    body(class = 'page')
        h1(class = 'page__heading visually-hidden')
            block heading

        block content