doctype html

block variables
    -let lang = 'ru';
    -let metaDescription = 'Бронирование отелей и гостиниц'

html(lang = lang)
    head
        meta(charset = 'UTF-8')
        meta(
            name = 'viewport' 
            content = 'width=device-width, initial-scale=1.0'
        )

        meta(
            name = 'description' 
            content = metaDescription
        )
        meta(
            name = 'theme-color' 
            content = '#ffffff'
        )
        title
            block title
 
    block content