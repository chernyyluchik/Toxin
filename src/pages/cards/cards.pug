extends ../../components/ui-kit/ui-kit

include ../../components/form-search/form-search
include ../../components/form-booking/form-booking
include ../../components/form-registration/form-registration
include ../../components/form-login/form-login
include ../../components/datepicker/datepicker

block title
    | Start page
block style
    | .ui-kit { background-color: var(--dark-shade-5per); }


block main
    div.cards
        div.cards__column
            +form-search({
                title: 'Найдём номера под ваши пожелания',
                dropdownDate: {
                    twin: 'true',
                    dropdown: {
                        from: {
                            textField: {
                                label: 'прибытие',
                                input: {
                                    name: 'arrival',
                                    value: 'ДД.ММ.ГГГГ',
                                    required: 'true'
                                }
                            },
                        },
                        to: {
                            textField: {
                                label: 'выезд',
                                input: {
                                    name: 'departure',
                                    value: 'ДД.ММ.ГГГГ',
                                    required: 'true'
                                }
                            }
                        },  
                    }
                },
                dropdownQuantity: {
                    dropdown: {
                        textField: {
                            label: 'гости', 
                            input: {
                                name: 'guests',
                                value: 'Сколько гостей',
                                required: 'true'
                            }
                        },
                    },
                    counterBar: {
                        mode: 'manualApply',
                        counter: [
                            { 
                                label: 'взрослые', 
                                name: 'adults', 
                                minValue: '0', 
                                maxValue: '5', 
                                plural: { 
                                    one: 'гость', 
                                    few: 'гостя', 
                                    many: 'гостей' 
                                }, 
                                isBound: 'true', 
                                boundName: 'guests' 
                            },
                            { 
                                label: 'дети', 
                                name: 'kids', 
                                minValue: '0', 
                                maxValue: '5', 
                                plural: { 
                                    one: 'гость', 
                                    few: 'гостя', 
                                    many: 'гостей' 
                                }, 
                                isBound: 'true', 
                                boundName: 'guests'
                            },
                            { 
                                label: 'младенцы', 
                                name: 'babies', 
                                minValue: '0', 
                                maxValue: '5', 
                                plural: { 
                                    one: 'младенец', 
                                    few: 'младенцев', 
                                    many: 'младенцев' 
                                } 
                            }
                        ] 
                    }
                },
                buttonSubmit: {
                    theme: 'filled-purple',
                    label: 'подобрать номер',
                    icon: 'arrow_forward'
                }
            })
            +form-registration({
                title: 'Регитрация аккаунта',
                inputName: {
                    input: {
                        name: 'name',
                        placeholder: 'Имя',
                        required: 'true'
                    }
                },
                inputSurname: {
                    input: {
                        name: 'surname',
                        placeholder: 'Фамилия',
                        required: 'true'
                    }
                },
                radio: [
                    {
                        label: 'Мужчина',
                        name: 'gender',
                        value: 'male',
                        checked: 'true'
                    },
                    {
                        label: 'Женщина',
                        name: 'gender',
                        value: 'female'
                    }
                ],
                inputBirthday: {
                    label: 'дата рождения',
                    input: {
                        name: 'birthday',
                        placeholder: 'ДД.ММ.ГГГГ',
                        mask: 'date',
                        required: 'true'
                    }
                },
                inputEmail: {
                    label: 'данные для входа в сервис',
                    input: {
                        name: 'email',
                        type: 'email',
                        placeholder: 'Email',
                        required: 'true'
                    }
                },
                inputPassword: {
                    name: 'password',
                    input: {
                        name: 'password',
                        type: 'password',
                        placeholder: 'Пароль',
                        required: 'true'
                    }
                },  
                toggle: {
                    name: 'special',
                    label: 'Получать спецпредложения'
                },
                buttonSubmit: {
                    theme: 'filled-purple',
                    label: 'перейти к оплате',
                    icon: 'arrow_forward'
                },
                loginText: 'Уже есть аккаунт на Toxin',
                buttonLogin: {
                    theme: 'shaped-purple',
                    label: 'войти',
                    type: 'button'
                }
            })
        div.cards__column
            +form-booking({
                room: {
                    number: '888',
                    category: 'люкс',
                    period: 'в сутки',
                    title: 'Итого',
                    discount: {
                        count: '2 179₽',
                        description: 'скидка'
                    },
                    rent: {
                        price: '9 990₽',
                        period: 'в сутки'
                    },
                    service: {
                        price: '0₽',
                        description: 'Сбор за услуги'
                    },
                    addition: {
                        price: '300₽',
                        description: 'Сбор за дополнительные <br> услуги '
                    }
                },
                dropdownDate: {
                    twin: 'true',
                    dropdown: {
                        from: {
                            textField: {
                                label: 'прибытие',
                                input: {
                                    name: 'arrival',
                                    value: 'ДД.ММ.ГГГГ',
                                    required: 'true'
                                }
                            }
                        },
                        to: {
                            textField: {
                                label: 'выезд',
                                input: {
                                    name: 'departure',
                                    value: 'ДД.ММ.ГГГГ',
                                    required: 'true'
                                }
                            }
                        }
                    }
                },
                dropdownQuantity: {
                    dropdown: {
                        textField: {
                            label: 'гости', 
                            input: {
                                name: 'guests',
                                value: 'Сколько гостей',
                                required: 'true'
                            }
                        }
                    },
                    counterBar: {
                        mode: 'manualApply',
                        counter: [
                            { 
                                label: 'взрослые', 
                                name: 'adults', 
                                minValue: '0', 
                                maxValue: '5', 
                                plural: { 
                                    one: 'гость', 
                                    few: 'гостя', 
                                    many: 'гостей' 
                                }, 
                                isBound: 'true', 
                                boundName: 'guests' 
                            },
                            { 
                                label: 'дети', 
                                name: 'kids', 
                                minValue: '0', 
                                maxValue: '5', 
                                plural: { 
                                    one: 'гость', 
                                    few: 'гостя', 
                                    many: 'гостей' 
                                }, 
                                isBound: 'true', 
                                boundName: 'guests'
                            },
                            { 
                                label: 'младенцы', 
                                name: 'babies', 
                                minValue: '0', 
                                maxValue: '5', 
                                plural: { 
                                    one: 'младенец', 
                                    few: 'младенцев', 
                                    many: 'младенцев' 
                                } 
                            }
                        ] 
                    }
                },
                buttonSubmit: {
                    theme: 'filled-purple',
                    label: 'подобрать номер',
                    icon: 'arrow_forward'
                }
            })
            +form-login({
                title: 'Войти',
                inputEmail: {
                    input: {
                        name: 'email',
                        type: 'email',
                        placeholder: 'Email',
                        required: 'true'
                    }
                },
                inputPassword: {
                    input: {
                        name: 'password',
                        type: 'password',
                        placeholder: 'Пароль',
                        required: 'true'
                    }
                }, 
                buttonSubmit: {
                    theme: 'filled-purple',
                    label: 'войти',
                    icon: 'arrow_forward'
                },
                registrationText: 'Нет аккаунта на Toxin?',
                buttonRegistration: {
                    theme: 'shaped-purple',
                    label: 'создать',
                    type: 'button'
                }
            })
        div.cards__column
            +datepicker()
