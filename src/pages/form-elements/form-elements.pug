extends ../../globals/template

include ../../components/ui-kit-layout/ui-kit-layout
include ../../components/text-field/text-field
include ../../components/quantity-dropdown/quantity-dropdown
include ../../components/date-dropdown/date-dropdown
include ../../components/subscribtion-field/subscribtion-field
include ../../components/expandable-checkbox-list/expandable-checkbox-list
include ../../components/bullet-list/bullet-list
include ../../components/checkbox-list/checkbox-list
include ../../components/radio-bar/radio-bar
include ../../components/toggle/toggle
include ../../components/like/like
include ../../components/rate-bar/rate-bar
include ../../components/slider/slider
include ../../components/button/button
include ../../components/pagination/pagination
include ../../components/features/features
include ../../components/review/review

block variables
    -const title = 'Form elements';
    -const formElements = require('./../../globals/mocks/form-elements.json');

block content
    +ui-kit-layout({
        backgroundColor: 'white'
    })
        div(class = 'form-elements')    
            div(class = 'form-elements__group-1')
                div(class = 'form-elements__text-field-section')
                    +text-field(formElements.textFieldSection.textField)
                div(class = 'form-elements__text-field-focused-section')
                    +text-field(formElements.textFieldFocusedSection.textField)
                div(class = 'form-elements__dropdown-section')
                    +quantity-dropdown(formElements.dropdownSection.quantityDropdown.collapsed)
                div(class = 'form-elements__text-field-masked-section')
                    +text-field(formElements.textFieldMaskedSection.textField)
                div(class = 'form-elements__date-dropdown-section')
                    +date-dropdown(formElements.dateDropdownSection.dateDropdown)
                div(class = 'form-elements__filter-date-dropdown-section')
                    +date-dropdown(formElements.filterDateDropdownSection.dateDropdown)
                div(class = 'form-elements__subscribtion-text-field-section')
                    +subscribtion-field(formElements.subscribtionTextFieldSection.subscribtionField)
            
            div(class = 'form-elements__group-2')
                div(class = 'form-elements__filter-dropdown-section')
                    +quantity-dropdown(formElements.filterDropdownSection.quantityDropdown.collapsed)
                div(class = 'form-elements__filter-dropdown-section form-elements__filter-dropdown-section_expanded')
                    +quantity-dropdown(formElements.filterDropdownSection.quantityDropdown.expanded)
                div(class = 'form-elements__expandable-checkbox-list-section')
                    +expandable-checkbox-list(formElements.expandableCheckboxListSection.expandableList.collapsed)
                div(class = 'form-elements__expandable-checkbox-list-section')
                    +expandable-checkbox-list(formElements.expandableCheckboxListSection.expandableList.expanded)

            div(class = 'form-elements__group-3')
                div(class = 'form-elements__checkbox-buttons-section')
                    h3(class = 'form-elements__label') #{formElements.checkboxButtonsSection.label}
                    +checkbox-list(formElements.checkboxButtonsSection.checkboxList)
                div(class = 'form-elements__radio-buttons-section')
                    h3(class = 'form-elements__label') #{formElements.radioButtonsSection.label}
                    +radio-bar(formElements.radioButtonsSection.radioBar)
                div(class = 'form-elements__toggle-section')
                    h3(class = 'form-elements__label') #{formElements.toggleSection.label}
                    div(class = 'form-elements__toggle-bar')
                        each data in formElements.toggleSection.toggle
                            +toggle(data)
                div(class = 'form-elements__like-button-section')
                    h3(class = 'form-elements__label') #{formElements.likeButtonSection.label}
                    div(class = 'form-elements__like-bar')
                        each data in formElements.likeButtonSection.like
                            +like(data)
                div(class = 'form-elements__rate-button-section')
                    h3(class = 'form-elements__label') #{formElements.rateButtonSection.label}
                    div(class = 'form-elements__rate-button-bar')
                        each data in formElements.rateButtonSection.rateBar
                            +rate-bar(data)

            div(class = 'form-elements__group-4')
                div(class = 'form-elements__dropdown-section form-elements__dropdown-section_expanded')
                    +quantity-dropdown(formElements.dropdownSection.quantityDropdown.expanded)
                div(class = 'form-elements__rich-checkbox-buttons-section')
                    h3(class = 'form-elements__label') #{formElements.richCheckboxButtonsSection.label}
                    +checkbox-list(formElements.richCheckboxButtonsSection.checkboxList)  
            
            div(class = 'form-elements__group-5')
                div(class = 'form-elements__range-section')
                    +slider(formElements.rangeSection.slider)
                div(class = 'form-elements__buttons-section')
                    h3(class = 'form-elements__label') #{formElements.buttonsSection.label}
                    div(class = 'form-elements__buttons-column')
                        each item in formElements.buttonsSection.buttonsBar
                            div(class = 'form-elements__buttons-bar')
                                each data in item
                                    +button(data)
                        div(class = 'form-elements__submit-button')
                            +button(formElements.buttonsSection.submitButton)
                div(class = 'form-elements__pagination-section')
                    h3(class = 'form-elements__label') #{formElements.paginationSection.label}
                    +pagination(formElements.paginationSection.pagination)

            div(class = 'form-elements__group-6')
                div(class = 'form-elements__dropdown-section form-elements__dropdown-section_expanded')
                    +quantity-dropdown(formElements.dropdownSection.quantityDropdown.expanded)
                div(class = 'form-elements__bullet-list-section')
                    h3(class = 'form-elements__label') #{formElements.bulletListSection.label}
                    +bullet-list(formElements.bulletListSection.bulletList) 

            div(class = 'form-elements__group-7')
                div(class = 'form-elements__features-section')
                div(class = 'form-elements__review-section')
                    +review(formElements.reviewSection.review)